{
  "//": "File: packages/ui/package.json | Purpose: Shared UI library manifest | Structure: Build, lint, and typecheck commands",
  "name": "@fusion-futures/ui",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch --dts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,md}'",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "react": "18.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "14.3.1",
    "@types/react": "18.3.3",
    "@types/node": "20.12.12",
    "tsup": "8.0.2",
    "typescript": "5.4.5",
    "vitest": "1.5.2",
    "@vitejs/plugin-react": "4.3.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "^14.2.3",
    "next-auth": "^4.24.7",
    "next-themes": "^0.3.15"
  }
}

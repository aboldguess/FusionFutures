; ============================================================================
; File: .editorconfig
; Purpose: Monorepo-wide editor preferences ensuring consistent formatting.
; Structure: Defines root, indentation, and line ending rules for multiple languages.
; Usage: Compatible editors automatically respect these settings across the repo.
; ============================================================================
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
